<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="25dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFDE7"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:scaleType="fitXY"
                    android:src="@drawable/trip3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFDE7"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:scaleType="fitXY"
                    android:src="@drawable/trip3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.65"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/date_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="08-08-2021" />
                    <TextView
                        android:id="@+id/time_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:layout_margin="8dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="07:46 PM"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tripName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        tools:text="Cairo Trip"/>

                    <TextView
                        android:id="@+id/up_coming"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        tools:text="Up Coming"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.65"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/start_point"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_round_my_location_24"
                        tools:text="Tanta" />


                    <TextView
                        android:id="@+id/end_point"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        tools:text="Cairo"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5"
                        android:layout_marginRight="2dp"
                        android:background="#795548">
                        <TextView
                            android:id="@+id/start"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:background="?android:attr/selectableItemBackground"
                            tools:text="start" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/note"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="#FFC107"
                        tools:text="NOTE" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:drawableRight="@drawable/ic_round_menu_24"
                android:background="?android:attr/selectableItemBackground"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

